<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProductCrudApp.Views.Category.CategoryAddPage"
             Title="Category Add">

    <Grid Padding="10" RowSpacing="5" BackgroundColor="#f7f9fe">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Entry Grid.Row="0"
            Placeholder="Enter Name" Text="{Binding Name}" />
        <Button Grid.Row="5"
            Text="Save" Command="{Binding CreateCategoryCommand}" />
    </Grid>
</ContentPage>