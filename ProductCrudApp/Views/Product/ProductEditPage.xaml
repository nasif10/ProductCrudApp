<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProductCrudApp.Views.Product.ProductEditPage"
             Title="Product Edit">

    <Grid Padding="10" RowSpacing="5" BackgroundColor="#f7f9fe">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Entry Grid.Row="0"
            Placeholder="Enter Name" Text="{Binding Product.Name}" />
        <Picker Grid.Row="1"
            Title="Select Category"
            ItemsSource="{Binding Categories}"
            ItemDisplayBinding="{Binding Name}" 
            SelectedItem="{Binding SelectedCategory, Mode=TwoWay}" />
        <Button Grid.Row="2"
            Text="{Binding SelectImageText}" BackgroundColor="White" TextColor="Black" BorderColor="LightGray" BorderWidth="0.3"
            Command="{Binding SelectImageCommand}" />
        <Entry Grid.Row="3" Margin="0,5,0,0"
            Placeholder="Enter Description" Text="{Binding Product.Description}" />
        <Entry Grid.Row="4"
            Placeholder="Enter Price" Text="{Binding Product.Price}" />

        <Button Grid.Row="5"
            Text="Save" Command="{Binding UpdateProductCommand}" />
    </Grid>
</ContentPage>